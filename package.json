{
  "name": "scrum-ai-meeting-app",
  "version": "1.0.0",
  "description": "Cross-platform audio-based meeting application with real-time AI insights",
  "main": "src/electron/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "setup-python": "cd src/python && python -m venv venv && source venv/bin/activate && pip install -r requirements.txt",
    "test": "jest",
    "lint": "eslint src/"
  },
  "keywords": [
    "electron",
    "meeting",
    "ai",
    "audio",
    "scrum",
    "real-time",
    "snapdragon"
  ],
  "author": "ScrumAI Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "eslint": "^8.50.0",
    "jest": "^29.7.0"
  },
  "dependencies": {
    "@notionhq/client": "^5.1.0",
    "@supabase/supabase-js": "^2.38.0",
    "dotenv": "^17.2.2",
    "node-record-lpcm16": "^1.0.1",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.7.2",
    "speaker": "^0.5.4",
    "wav": "^1.0.2",
    "ws": "^8.14.2"
  },
  "build": {
    "appId": "com.scrumAI.meeting-app",
    "productName": "ScrumAI Meeting Assistant",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "arch": [
        "x64",
        "arm64"
      ]
    },
    "mac": {
      "target": "dmg",
      "arch": [
        "x64",
        "arm64"
      ]
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
